{
    "name": "smpleader/spt",
    "description": "Simple & Powerful Tool Framework based PHP.",
    "keywords": ["PHP framework", "SPT framework", "PHP MVVM", "SPT"],
    "license": "GPL-2.0-or-later",
    "homepage": "https://github.com/smpleader/spt/wiki",
    "support": {
        "issues": "https://github.com/smpleader/spt/issues",
        "source": "https://github.com/smpleader/spt"
    },
    "authors": [
        {
            "name": "Pham Minh",
            "email": "minh@joomaio.com"
        }
    ],
    "require": {
        "php": ">=8.2",
        "ext-json": "*",
        "ext-mbstring": "*"
    },
    "autoload": {
        "files": [
            "src/Log.php"
        ],
        "psr-4": {
            "SPT\\": "src/"
        }
    },
    "suggest": {
        "phpunit/phpunit": "Required to use assertions and run tests (^8.4|^9.0)."
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}